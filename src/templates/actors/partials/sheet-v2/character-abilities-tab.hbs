<div class="ability-fields ability-fields--exploration-skills">
  <uft-character-ability-field name="system.exploration.ld" value="{{actor.system.exploration.ld}}">
    <img src="{{asset '/Melee.svg'}}" slot="icon" />
    {{localize "OSE.exploration.ld.short"}}
  </uft-character-ability-field>

  <uft-character-ability-field name="system.exploration.od" value="{{actor.system.exploration.od}}">
    <img src="{{asset '/Melee.svg'}}" slot="icon" />
    {{localize "OSE.exploration.od.short"}}
  </uft-character-ability-field>

  <uft-character-ability-field name="system.exploration.sd" value="{{actor.system.exploration.sd}}">
    <img src="{{asset '/Melee.svg'}}" slot="icon" />
    {{localize "OSE.exploration.sd.short"}}
  </uft-character-ability-field>

  <uft-character-ability-field name="system.exploration.ft" value="{{actor.system.exploration.ft}}">
    <img src="{{asset '/Melee.svg'}}" slot="icon" />
    {{localize "OSE.exploration.ft.short"}}
  </uft-character-ability-field>
</div>

<uft-expandable-section type="ability" can-create aria-expanded>
  <h2 slot="heading">{{localize "OSE.category.abilities"}}</h2>
{{#each actor.system.abilities}}
  <uft-item-row class="item" slot="content" uuid="{{this.uuid}}" can-favorite>
    {{{this.system.enrichedDescription}}}
    {{#each this.system.autoTags}}
      <uft-tag-chip slot="title-content"><i class="fa {{icon}}"></i>{{localize label}}</uft-tag-chip>
    {{/each}}
  </uft-item-row>
{{/each}}
</uft-expandable-section>
