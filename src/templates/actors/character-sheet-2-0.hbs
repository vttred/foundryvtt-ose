<form class="{{cssClass}}" autocomplete="off" data-uuid="{{this.actor.uuid}}">
  {{! Sheet Tab Navigation }}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="attributes">
      {{localize "OSE.category.combat"}}
    </a>
    <a class="item" data-tab="abilities">
      {{localize "OSE.category.abilities"}}
    </a>
    <a class="item" data-tab="inventory">
      {{localize "OSE.category.inventory"}}
    </a>
    {{#if actor.system.spells.enabled}}
    <a class="item" data-tab="spells"> {{localize "OSE.category.magic"}} </a>
    {{/if}}
    <a class="item" data-tab="notes"> {{localize "OSE.category.notes"}} </a>
  </nav>
  {{! Sheet Body }}
  <section class="sheet-body">
    {{! Combat Tab }}
    <div class="tab tab--combat" data-group="primary" data-tab="attributes">
      {{> (path "/templates/actors/partials/sheet-v2/character-combat-tab.hbs") }}
    </div>
    {{! Abilities Tab }}
    <div class="tab" data-group="primary" data-tab="abilities">
      {{> (path "/templates/actors/partials/sheet-v2/character-abilities-tab.hbs") }}
    </div>
    {{! Inventory Tab }}
    <div class="tab" data-group="primary" data-tab="inventory">
      {{> (path "/templates/actors/partials/sheet-v2/character-inventory-tab.hbs") }}
    </div>
    {{! Magic Tab }}
    {{#if actor.system.spells.enabled}}
    <div class="tab" data-group="primary" data-tab="spells">
      {{> (path "/templates/actors/partials/sheet-v2/character-magic-tab.hbs") }}
    </div>
    {{/if}}
    {{! Notes Tab }}
    <div class="tab" data-group="primary" data-tab="notes">
      {{> (path "/templates/actors/partials/sheet-v2/character-notes-tab.hbs") }}
    </div>
  </section>
</form>
  